#srollArea {
    border: none;
}

#widget1,
#widget2,
#widget3 {
    background-color: rgb(243, 243, 243);
}

QScrollArea {
    background-color: transparent;
}

QScrollBar:vertical {
    width: 4px;
    background: transparent;
    margin: 0px, 0px, 0px, 0px;
    padding-top: 0px;
    padding-bottom: 0px;
}


/* QScrollBar:vertical:hover {
    width: 4px;
