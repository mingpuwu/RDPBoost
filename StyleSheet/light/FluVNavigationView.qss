QScrollBar::handle:vertical {
    width: 4px;
    background: rgb(138, 138, 138);
    border-radius: 2px;
    min-height: 15;
}


/* QScrollBar::handle:vertical:hover {
    width: 2px;
    background: rgb(138, 138, 138);
    border-radius: 1px;
    min-height: 15;
} */

QScrollBar::add-line:vertical {
    background-color: transparent;
}

QScrollBar::sub-line:vertical {
    background-color: transparent;
}